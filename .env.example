# ==============================================
# EcoSwitch Environment Configuration Template
# ==============================================
# Copy this file to .env and fill in your actual values

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecoswitch_db
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_SSL=false

# Database URL (alternative format)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ==============================================
# API CONFIGURATION
# ==============================================
API_BASE_URL=http://localhost:3000
API_PORT=3000
NODE_ENV=development

# ==============================================
# EXPO/REACT NATIVE CONFIGURATION
# ==============================================
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_APP_NAME=EcoSwitch
EXPO_PUBLIC_APP_VERSION=1.0.0

# ==============================================
# SECURITY SETTINGS
# ==============================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=http://localhost:19006,http://localhost:8081

# ==============================================
# EXTERNAL SERVICES (Future Integration)
# ==============================================
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
ENERGY_DATA_API_KEY=your_energy_data_api_key_here

# ==============================================
# EMAIL CONFIGURATION (Future)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=EcoSwitch <noreply@ecoswitch.com>

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
DEBUG=true
VERBOSE_LOGGING=true
SEED_DATABASE=true
CREATE_SAMPLE_DATA=true
