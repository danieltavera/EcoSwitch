# Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values

NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecoswitch_db
DB_USER=ecoswitch_user
DB_PASSWORD=your_db_password
DATABASE_URL=postgresql://ecoswitch_user:your_db_password@localhost:5432/ecoswitch_db
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:19006,http://localhost:8081,http://10.0.0.21:19006,http://10.0.0.21:8081

# Email Configuration (SendGrid)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourdomain.com
FRONTEND_URL=http://localhost:3000

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Development/Production specific settings
# In production, set these appropriately:
# NODE_ENV=production
# FRONTEND_URL=https://yourdomain.com
# FROM_EMAIL=noreply@yourdomain.com
